generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       BigInt @id @default(autoincrement())
  username String @unique @db.VarChar(50)
  phone    String @unique @db.VarChar(20)
  password String @db.VarChar(255)

  bankCode        String? @map("bank_code") @db.VarChar(10)
  bankAccountNo   String? @map("bank_account_no") @db.VarChar(20)
  bankAccountName String? @map("bank_account_name") @db.VarChar(100)

  ambUsername String? @map("amb_username") @db.VarChar(50)
  ambCreated  Boolean @default(false) @map("amb_created")

  status    UserStatus @default(active)
  lastLogin DateTime?  @map("last_login") @db.Timestamp(0)
  createdAt DateTime   @default(now()) @map("created_at") @db.Timestamp(0)

  tokenVersion Int @default(0) @map("token_version")

  transactions  Transaction[]
  refreshTokens RefreshToken[]
}

model BankAccount {
  id           Int             @id @default(autoincrement())
  bankCode     String          @map("bank_code") @db.VarChar(10)
  bankName     String          @map("bank_name") @db.VarChar(100)
  accountNo    String          @map("account_no") @db.VarChar(20)
  accountName  String          @map("account_name") @db.VarChar(100)
  type         BankAccountType @default(both)
  isActive     Boolean         @default(true) @map("is_active")
  displayOrder Int             @default(0) @map("display_order")
  minAmount    Decimal         @default(100.00) @map("min_amount") @db.Decimal(15, 2)
  maxAmount    Decimal         @default(50000.00) @map("max_amount") @db.Decimal(15, 2)
  dailyLimit   Decimal         @default(1000000.00) @map("daily_limit") @db.Decimal(15, 2)
  createdAt    DateTime        @default(now()) @map("created_at") @db.Timestamp(0)
}

model Transaction {
  id              BigInt            @id @default(autoincrement())
  userId          BigInt            @map("user_id")
  transactionNo   String            @unique @map("transaction_no") @db.VarChar(50)
  type            TransactionType
  amount          Decimal           @db.Decimal(15, 2)
  fromBankCode    String?           @map("from_bank_code") @db.VarChar(10)
  fromAccountNo   String?           @map("from_account_no") @db.VarChar(20)
  fromAccountName String?           @map("from_account_name") @db.VarChar(100)
  toBankCode      String?           @map("to_bank_code") @db.VarChar(10)
  toAccountNo     String?           @map("to_account_no") @db.VarChar(20)
  toAccountName   String?           @map("to_account_name") @db.VarChar(100)
  status          TransactionStatus @default(pending)
  ambRefId        String?           @map("amb_ref_id") @db.VarChar(100)
  slipImage       String?           @map("slip_image") @db.VarChar(255)
  approvedBy      Int?              @map("approved_by")
  approvedAt      DateTime?         @map("approved_at") @db.Timestamp(0)
  rejectReason    String?           @map("reject_reason") @db.VarChar(255)
  createdAt       DateTime          @default(now()) @map("created_at") @db.Timestamp(0)
  user            User              @relation(fields: [userId], references: [id])
}

model Admin {
  id        Int       @id @default(autoincrement())
  username  String    @unique @db.VarChar(50)
  password  String    @db.VarChar(255)
  name      String    @db.VarChar(100)
  role      AdminRole @default(staff)
  isActive  Boolean   @default(true) @map("is_active")
  lastLogin DateTime? @map("last_login") @db.Timestamp(0)
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamp(0)
}

model Setting {
  id           Int     @id @default(autoincrement())
  settingKey   String  @unique @map("setting_key") @db.VarChar(100)
  settingValue String? @map("setting_value")
  description  String? @db.VarChar(255)
}

model RefreshToken {
  id     BigInt @id @default(autoincrement())
  userId BigInt @map("user_id")

  tokenHash String    @unique @map("token_hash") @db.VarChar(64) // sha256 hex
  expiresAt DateTime  @map("expires_at") @db.Timestamp(0)
  revokedAt DateTime? @map("revoked_at") @db.Timestamp(0)
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamp(0)

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([expiresAt])
}

enum UserStatus {
  active
  inactive
  banned
}

enum BankAccountType {
  deposit
  withdraw
  both
}

enum TransactionType {
  deposit
  withdraw
}

enum TransactionStatus {
  pending
  approved
  rejected
  cancelled
}

enum AdminRole {
  superadmin
  admin
  staff
}
